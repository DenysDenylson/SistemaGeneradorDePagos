<h1>Registrar sindicato</h1>
<form class="form-horizontal" action="/nuevo_sindicato" method="post" name="nuevo" onsubmit="return formulario()">
	<div class = "form-group">
		<label class="col-md-4 control-label" for="nombre">Nombre:</label>
		<div class="col-md-4">
			<input name="nombre" id="nombre" type="text" value="" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="fecha">Fecha:</label>
		<div class="col-md-4">
			<input name="fecha" type="date" value="<%= @date %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="descuento">Descuento Fijo:</label>
		<div class="col-md-4">
			<input name="descuento" type="number" placeholder = "0" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<input type="submit" value="Crear Sindicato" class="btn btn-success" />
	</div>
	
</form> 

<script type="text/javascript">
	function formulario() { 
		var inputVal = nuevo.nombre.value
    	if (inputVal == "") 
      	{
        	$("#nombre").css({"-webkit-box-shadow":"0px 0px 6px 2px #f00"});
        	$("#nombre").attr({"placeholder":"obligatorio"});
        	nuevo.nombre.focus();  
     		return false; 
   		}
	}
</script>
