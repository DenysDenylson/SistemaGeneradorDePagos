<h1>Registrar sindicato</h1>
<form class="form-horizontal" action="/nueva_tarjeta_servicio" method="post">
	<div class = "form-group">
		<label class="col-md-4 control-label" for="ci_empleado">Buscar por:</label>
		<div class="col-md-4">
			<select name="ci_empleado" class="form-control">
				<% @empleados.each  do |empleado| %>
					<option value = "<%= empleado.ci %>"><%= empleado.devolver_cadena %></option>
				<% end %>
			</select>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="fecha">Fecha:</label>
		<div class="col-md-4">
			<input name="fecha" type="date" value="<%= @date %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="monto">Monto:</label>
		<div class="col-md-4">
			<input name="monto" type="number" placeholder="0" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="descripcion">Descripcion:</label>
		<div class="col-md-4">
			<textarea name="descripcion" class="form-control" rows="3"></textarea>
		</div>
	</div>
	<div class = "form-group">
		<input type="submit" value="Crear Tarjeta de Servicio" class="btn btn-success" />
	</div>
	
</form> 
