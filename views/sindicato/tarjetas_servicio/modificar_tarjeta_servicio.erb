<h1>Modificar Tarjeta de Servicio</h1>
<form class="form-horizontal" action="/modificar_tarjetas_servicios" method="post">
	<input type="hidden" name="_method" value="put" />
	<input type="hidden" name="object_id" value="<%= @object_id%>" />
	<div class = "form-group">
		<label class="col-md-4 control-label" for="ci_empleado">Buscar por:</label>
		<div class="col-md-4">
			<select name="ci_empleado" class="form-control">
				<% @empleados.each  do |empleado| %>
					<option value = "<%= empleado.ci %>" <%= 'selected' if empleado.verificar_ci(@tarjeta_servicio.ci_empleado) %>>
						<%= empleado.devolver_cadena %>
					</option>
				<% end %>
			</select>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="fecha">Fecha:</label>
		<div class="col-md-4">
			<input name="fecha" type="date" value="<%= @tarjeta_servicio.fecha %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="monto">Monto:</label>
		<div class="col-md-4">
			<input name="monto" type="number" placeholder="0" value="<%= @tarjeta_servicio.monto%>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="descripcion">Descripcion:</label>
		<div class="col-md-4">
			<textarea name="descripcion" value="<%= @tarjeta_servicio.descripcion %>" class="form-control" rows="3"></textarea>
		</div>
	</div>
	<div class = "form-group">
		<input type="submit" value="Modificar Tarjeta de Servicio" class="btn btn-success" />
	</div>
	
</form> 
