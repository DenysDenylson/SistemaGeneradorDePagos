
<h1>Agregar Tarjeta de Tiempo</h1>
<form class="form-horizontal" action="/empleados" method="post">
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">CI:</label>
		<div class="col-md-4">
			<input name="ci" id="ci" type="text"  value="<%= @tarjetaTiempo.id_empleado %>" class="form-control input-md" readonly/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">Fecha:</label>
		<div class="col-md-4">
			<input name="fecha" type="date" value="<%= @tarjetaTiempo.fecha %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">Hora Ingreso:</label>
		<div class="col-md-4">
			<input name="ingreso" type="time" value="08:00" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">Hora Salida:</label>
		<div class="col-md-4">
			<input name="salida" type="time" value="12:00" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<input type="submit" value="Agregar" class="btn btn-success" />
	</div>
	
</form>