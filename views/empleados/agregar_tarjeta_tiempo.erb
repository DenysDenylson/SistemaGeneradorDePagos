<h1>Agregar Tarjeta de Tiempo</h1>
<form class="form-horizontal" action="/empleados" method="post">
	<div class = "form-group">
		<label class="lead" for="ci">CI : <% = @empleado.ci %></label>
		<input name="ci" id="ci" type="hidden" value="<% = @empleado.ci %>"/>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">Fecha:</label>
		<div class="col-md-4">
			<input name="fecha" type="date" value="<%= @empleado.fecha_inicio_contrato %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">Hora Ingreso:</label>
		<div class="col-md-4">
			<input name="fecha" type="time" value="<%= Time.now %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<label class="col-md-4 control-label" for="empleado_fecha_inicio_contrato">Hora Salida:</label>
		<div class="col-md-4">
			<input name="fecha" type="time" value="<%= Time.now %>" class="form-control input-md"/>
		</div>
	</div>
	<div class = "form-group">
		<input type="submit" value="Agregar" class="btn btn-success" />
	</div>
	
</form>